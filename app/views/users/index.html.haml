- content_for(:page_title) { _ 'Users' }

%table
  %thead
    %tr
      %th= _ 'E-mail address'
      %th= _ 'Password'
      %th= _ 'Password confirmation'
      %th{:colspan => "3"}
  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= user.password
        %td= user.password_confirmation
        %td= link_to _('Show'), user
        %td= link_to _('Edit'), edit_user_path(user)
        %td= link_to _('Destroy'), user, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to _('New User'), new_user_path
